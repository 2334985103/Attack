<Window x:Class="Attack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attack MP4 播放器" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Boolean到Visibility的转换器 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 现代深色主题 -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="#404040">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- B站风格进度条样式 -->
        <Style TargetType="Slider" x:Key="BilibiliProgressSliderStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 进度条轨道 -->
                            <Border x:Name="TrackBackground" 
                                    Grid.Row="1"
                                    Height="3" 
                                    Background="#404040" 
                                    CornerRadius="1.5"
                                    Margin="0,10"
                                    MouseLeftButtonDown="TrackBackground_MouseLeftButtonDown"/>

                            <!-- 已播放进度 -->
                            <Border x:Name="ProgressBackground" 
                                    Grid.Row="1"
                                    Height="3" 
                                    Background="#FF6B00" 
                                    CornerRadius="1.5"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"/>

                            <!-- 滑块 - 悬停时显示 -->
                            <Thumb x:Name="Thumb" 
                                   Grid.Row="1"
                                   Height="12" 
                                   Width="12" 
                                   Background="White"
                                   BorderThickness="1"
                                   BorderBrush="#FF6B00"
                                   Opacity="0"
                                   Focusable="False"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand">
                                <Thumb.Style>
                                    <Style TargetType="Thumb">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}" 
                                                                 Stroke="{TemplateBinding BorderBrush}"
                                                                 StrokeThickness="1"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Thumb.Style>
                            </Thumb>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 文件列表样式 -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF6B00"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 播放/暂停按钮样式 -->
        <Style TargetType="Button" x:Key="PlayPauseButtonStyle" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF6B00"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- B站风格控制按钮样式 -->
        <Style TargetType="Button" x:Key="BilibiliControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- B站风格文字按钮样式 -->
        <Style TargetType="Button" x:Key="BilibiliTextButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- B站风格播放按钮样式 -->
        <Style TargetType="Button" x:Key="BilibiliPlayButton">
            <Setter Property="Background" Value="#FF6B00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E55A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#0F0F0F" 
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="#2A2A2A">

        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Grid.ColumnSpan="2"
                    Background="Transparent" 
                    CornerRadius="15,15,0,0"
                    Height="45">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 标题和Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="⚡" FontSize="18" Margin="0,0,8,0" Foreground="#FF6B00"/>
                        <TextBlock Text="ATTACK 播放器" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CurrentFileText" Text="未加载文件" FontSize="12" Foreground="#888888" 
                                   Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 窗口控制按钮 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Content="⛶" Width="30" Height="30" Style="{StaticResource ModernButton}" 
                                Click="FullscreenButton_Click" Background="Transparent" Foreground="White"
                                ToolTip="全屏"/>
                        <Button Content="─" Width="30" Height="30" Style="{StaticResource ModernButton}" 
                                Click="MinimizeButton_Click" Background="Transparent" Foreground="White"
                                ToolTip="最小化"/>
                        <Button Content="❌" Width="30" Height="30" Style="{StaticResource ModernButton}" 
                                Click="CloseButton_Click" Background="Transparent" Foreground="White"
                                ToolTip="关闭"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 文件列表区域 -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="#1A1A1A" 
                    Margin="10,0,5,10" 
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#2A2A2A">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 文件夹选择按钮 -->
                    <Button Grid.Row="0" Content="📁 选择文件夹" 
                            Style="{StaticResource ModernButton}" 
                            Click="SelectFolderButton_Click" 
                            Background="#2A2A2A"
                            Margin="10,10,10,5"
                            Height="35"/>

                    <!-- 记忆播放控制 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,10,5">
                        <CheckBox x:Name="MemoryPlaybackCheckBox" 
                                  Content="记忆播放" 
                                  Foreground="#CCCCCC" 
                                  IsChecked="True"
                                  VerticalAlignment="Center"
                                  ToolTip="启用后会自动记录播放进度和上次播放的文件夹"/>
                        <Button Content="清除记录" 
                                Style="{StaticResource ModernButton}" 
                                Click="ClearMemoryButton_Click" 
                                Background="Transparent"
                                Margin="10,0,0,0"
                                Padding="8,4"
                                FontSize="10"
                                ToolTip="清除所有播放记录和记忆状态"/>
                    </StackPanel>

                    <!-- 文件列表 -->
                    <ListBox Grid.Row="2" 
                             x:Name="FileListBox" 
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             SelectionChanged="FileListBox_SelectionChanged"
                             Margin="10,5,10,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="#CCCCCC" 
                                                   TextWrapping="Wrap"
                                                   ToolTip="{Binding FullPath}"/>
                                        <!-- 显示播放进度 -->
                                        <TextBlock x:Name="ProgressText" 
                                                   Text="{Binding ProgressText}" 
                                                   Foreground="#FF6B00" 
                                                   FontSize="10"
                                                   Margin="5,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- 显示上次观看标记 -->
                                    <TextBlock Text="上次观看" 
                                               Foreground="#FF6B00" 
                                               FontSize="9"
                                               Margin="0,2,0,0"
                                               Visibility="{Binding IsLastWatched, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 视频显示区域 -->
            <Border Grid.Row="1" Grid.Column="1" Background="#000000" Margin="5,0,10,10" CornerRadius="8">
                <Grid x:Name="VideoContainer">
                    <MediaElement x:Name="MediaPlayer" 
                                  LoadedBehavior="Manual" 
                                  UnloadedBehavior="Stop"
                                  MediaOpened="MediaPlayer_MediaOpened"
                                  MediaEnded="MediaPlayer_MediaEnded"
                                  MediaFailed="MediaPlayer_MediaFailed"
                                  MouseMove="VideoContainer_MouseMove"
                                  MouseLeave="VideoContainer_MouseLeave"
                                  MouseLeftButtonDown="MediaPlayer_MouseLeftButtonDown"/>

                    <!-- 非全屏时的控制条 - 始终显示 -->
                    <Grid x:Name="NormalControls" VerticalAlignment="Bottom" 
                          Height="70" Background="Transparent">

                        <!-- 控制条背景渐变 -->
                        <Rectangle VerticalAlignment="Bottom" Height="70">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#80000000" Offset="0.5"/>
                                    <GradientStop Color="#CC000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Grid Margin="15,0,15,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 播放控制按钮区域 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" Margin="0,5,0,0">
                                <!-- 上一集按钮 -->
                                <Button x:Name="NormalPrevButton" Style="{StaticResource BilibiliControlButton}" 
                                        Background="Transparent" Margin="0,-23,10,0"
                                        Click="PrevEpisodeButton_Click">
                                    <TextBlock Text="⏮" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- 暂停/播放按钮 -->
                                <Button x:Name="NormalPlayPauseButton" Style="{StaticResource BilibiliPlayButton}" 
                                        Background="#FF6B00" Margin="0,-23,10,0"
                                        Click="NormalPlayPauseButton_Click">
                                    <TextBlock x:Name="NormalPlayPauseIcon" Text="⏸" FontSize="12" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- 下一集按钮 -->
                                <Button x:Name="NormalNextButton" Style="{StaticResource BilibiliControlButton}" 
                                        Background="Transparent" Margin="0,-23,10,0"
                                        Click="NextEpisodeButton_Click">
                                    <TextBlock Text="⏭" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- 倍速按钮 -->
                                <Button x:Name="NormalSpeedButton" Style="{StaticResource BilibiliTextButton}" 
                                        Background="Transparent" Content="1.0x"
                                        Click="NormalSpeedButton_Click"/>
                            </StackPanel>

                            <!-- 底部进度条和控制区域 -->
                            <Grid Grid.Row="1" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" x:Name="NormalCurrentTimeText" Text="00:00:00" 
                                           Foreground="#CCCCCC" FontFamily="Consolas" VerticalAlignment="Center" 
                                           HorizontalAlignment="Left" FontSize="11" Margin="0,0,10,0"/>

                                <!-- 进度条 -->
                                <Slider Grid.Column="1" x:Name="NormalProgressSlider" 
                                        Style="{StaticResource BilibiliProgressSliderStyle}" Height="25"
                                        Margin="10,0" ValueChanged="NormalProgressSlider_ValueChanged"
                                        PreviewMouseLeftButtonDown="NormalProgressSlider_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="NormalProgressSlider_PreviewMouseLeftButtonUp"
                                        MouseEnter="NormalProgressSlider_MouseEnter"
                                        MouseLeave="NormalProgressSlider_MouseLeave"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <!-- 全屏按钮 -->
                                    <Button x:Name="NormalFullscreenButton" Style="{StaticResource BilibiliControlButton}" 
                                            Background="Transparent" Margin="10,0,0,0"
                                            Click="NormalFullscreenButton_Click">
                                        <TextBlock Text="⛶" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- 全屏时的控制条 - 可隐藏 -->
                    <Grid x:Name="FullscreenControls" VerticalAlignment="Bottom" 
      Height="140" Opacity="0" Background="Transparent"
      MouseMove="FullscreenControls_MouseMove"
      Visibility="Collapsed">

                        <!-- 控制条背景渐变 -->
                        <Rectangle VerticalAlignment="Bottom" Height="140">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#80000000" Offset="0.5"/>
                                    <GradientStop Color="#CC000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Grid Margin="20,0,20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 底部进度条 -->
                            <Grid Grid.Row="0" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" x:Name="FullscreenCurrentTimeText" Text="00:00:00" 
                       Foreground="#CCCCCC" FontFamily="Consolas" VerticalAlignment="Center" 
                       HorizontalAlignment="Left" FontSize="12" Margin="0,0,10,0"/>

                                <Slider Grid.Column="1" x:Name="FullscreenProgressSlider" 
                    Style="{StaticResource BilibiliProgressSliderStyle}" Height="25"
                    Margin="10,0" ValueChanged="FullscreenProgressSlider_ValueChanged"
                    PreviewMouseLeftButtonDown="FullscreenProgressSlider_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="FullscreenProgressSlider_PreviewMouseLeftButtonUp"
                    MouseEnter="FullscreenProgressSlider_MouseEnter"
                    MouseLeave="FullscreenProgressSlider_MouseLeave"/>

                                <TextBlock Grid.Column="2" x:Name="FullscreenTotalTimeText" Text="00:00:00" 
                       Foreground="#CCCCCC" FontFamily="Consolas" VerticalAlignment="Center" 
                       HorizontalAlignment="Right" FontSize="12" Margin="0,0,10,0"/>
                            </Grid>

                            <!-- 播放控制按钮区域 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" 
                    HorizontalAlignment="Center" Margin="0,10,0,0">
                                <!-- 上一集按钮 -->
                                <Button x:Name="FullscreenPrevButton" Style="{StaticResource BilibiliControlButton}" 
                    Background="#2A2A2A" Margin="0,-35,10,0"
                    Click="PrevEpisodeButton_Click">
                                    <TextBlock Text="⏮" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- 暂停/播放按钮 -->
                                <Button x:Name="FullscreenPlayPauseButton" Style="{StaticResource BilibiliPlayButton}" 
                    Background="#FF6B00" Margin="0,-35,10,0"
                    Click="FullscreenPlayPauseButton_Click">
                                    <TextBlock x:Name="FullscreenPlayPauseIcon" Text="⏸" FontSize="14" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- 下一集按钮 -->
                                <Button x:Name="FullscreenNextButton" Style="{StaticResource BilibiliControlButton}" 
                    Background="#2A2A2A" Margin="0,-35,10,0"
                    Click="NextEpisodeButton_Click">
                                    <TextBlock Text="⏭" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </StackPanel>

                            <!-- 取消全屏按钮 -->
                            <Button x:Name="FullscreenExitButton" Style="{StaticResource BilibiliControlButton}" 
                Background="#2A2A2A" Margin="0,65,10,0"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="FullscreenFullscreenButton_Click">
                                <TextBlock Text="⛶" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Grid>

                    <!-- 欢迎界面 -->
                    <Border x:Name="WelcomeOverlay" Background="#0F0F0F">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="⚡" FontSize="48" Foreground="#FF6B00" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                            <TextBlock Text="ATTACK 播放器" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <TextBlock Text="极致观影体验，从这里开始" FontSize="16" Foreground="#CCCCCC" Margin="0,0,0,30" HorizontalAlignment="Center" TextAlignment="Center"/>
                            <TextBlock Text="🎬 支持多种视频格式" FontSize="14" Foreground="#888888" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <TextBlock Text="⚡ 流畅播放体验" FontSize="14" Foreground="#888888" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <TextBlock Text="🎯 智能文件管理" FontSize="14" Foreground="#888888" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <TextBlock Text="💾 记忆播放功能" FontSize="14" Foreground="#888888" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <TextBlock Text="🔄 无缝切换播放" FontSize="14" Foreground="#888888" Margin="0,0,0,30" HorizontalAlignment="Center"/>
                            <Button Content="📁 打开视频文件" 
                                    Style="{StaticResource ModernButton}" 
                                    Click="OpenFileButton_Click" 
                                    Background="#FF6B00" 
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Padding="20,10"
                                    FontSize="14"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 加载和错误状态显示 -->
                    <Border x:Name="StatusOverlay" Background="#80000000" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="StatusText" Text="加载中..." Foreground="White" FontSize="16" 
                                       HorizontalAlignment="Center" Margin="10"/>
                            <ProgressBar x:Name="LoadingProgress" IsIndeterminate="True" Width="200" Height="4" 
                                         Background="#404040" Foreground="#FF6B00" Margin="10"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- 控制面板 -->
            <Border x:Name="ControlPanel" Grid.Row="2" Grid.ColumnSpan="2"
                    Background="#1A1A1A" 
                    CornerRadius="0,0,15,15"
                    Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 进度条和时间显示 -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" x:Name="CurrentTimeText" Text="00:00:00" Foreground="#CCCCCC" 
                                   FontFamily="Consolas" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <Slider Grid.Column="1" x:Name="ProgressSlider" 
                                Style="{StaticResource BilibiliProgressSliderStyle}"
                                Margin="10,0" 
                                ValueChanged="ProgressSlider_ValueChanged"
                                PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                                MouseEnter="ProgressSlider_MouseEnter"
                                MouseLeave="ProgressSlider_MouseLeave"/>
                        <TextBlock Grid.Column="2" x:Name="TotalTimeText" Text="00:00:00" Foreground="#CCCCCC" 
                                   FontFamily="Consolas" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- 控制按钮区域 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- 文件操作 -->
                        <Button Content="📁 打开文件" Style="{StaticResource ModernButton}" 
                                Click="OpenFileButton_Click" Background="#2A2A2A"/>
                        <Button Content="⏹️ 停止" Style="{StaticResource ModernButton}" 
                                Click="StopButton_Click" Background="#2A2A2A"/>

                        <!-- 播放控制 -->
                        <Button x:Name="PlayPauseButton" Content="▶️ 播放" Style="{StaticResource PlayPauseButtonStyle}" 
                                Click="PlayPauseButton_Click"/>

                        <!-- 速度控制 -->
                        <ComboBox x:Name="SpeedComboBox" 
                                  Background="#2A2A2A"
                                  Foreground="White"
                                  Width="80" Height="30"
                                  SelectionChanged="SpeedComboBox_SelectionChanged">
                            <ComboBoxItem Content="0.5x" Tag="0.5"/>
                            <ComboBoxItem Content="0.75x" Tag="0.75"/>
                            <ComboBoxItem Content="1.0x" Tag="1.0" IsSelected="True"/>
                            <ComboBoxItem Content="1.25x" Tag="1.25"/>
                            <ComboBoxItem Content="1.5x" Tag="1.5"/>
                            <ComboBoxItem Content="2.0x" Tag="2.0"/>
                        </ComboBox>

                        <!-- 音量控制 -->
                        <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                            <TextBlock Text="🔊" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Slider x:Name="VolumeSlider" Width="80" Minimum="0" Maximum="1" Value="0.5"
                                    ValueChanged="VolumeSlider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
